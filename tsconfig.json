{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.vue",
        "./src/**/*.ts",
        "./src/components/**/*.vue",
        "../types/*.d.ts",
        "."
    ],
    "exclude": [
        "node_modules"
    ]
}
